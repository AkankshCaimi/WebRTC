<!DOCTYPE html>
<html>

<head>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- Import Google Fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Baloo+Tamma+2:wght@400;500;600&family=Josefin+Slab&display=swap"
    rel="stylesheet">
  <!-- Import CSS file -->
  <link rel="stylesheet" href="/css/styles.css">
</head>

<body class="h-100">
  <div class="h-100" id="video_display">
    <div id="video_container" class="align-items-center" style="margin-top: 10%;">
      <div class="local_div" id="div1">
        <!-- For playing local video -->
        <video id="localVideo" class="" autoplay muted playsinline></video>
        <video id="screenVideo" autoplay playsinline></video>
        <div>
          <button id="toggleVideoBtn" class="toggle-button video">Toggle Video</button>
          <button id="toggleAudioBtn" class="toggle-button audio">Toggle Audio</button>
          <button id="shareScreenBtn" class="toggle-button video">Share Screen</button>
          <button id="startRecordingBtn" class="toggle-button video">Start Recording</button>
          <button id="stopRecordingBtn" class="toggle-button audio">Stop Recording</button>
        </div>
      </div>
      <div class="remote_div" id="div2">
        <!-- For playing remote video -->
        <video id="remoteVideo" class="" autoplay playsinline></video>
        <video id="remoteScreen" class="" autoplay playsinline></video>
      </div>
    </div>
  </div>

  <!-- Import SocketIO for signalling -->
  <script src="/socket.io/socket.io.js"></script>
  <!-- Import WebRTC adapter for compatibility with all browsers -->
  <script src="https://webrtc.github.io/adapter/adapter-latest.js"></script>
  <!-- Import TURN config -->
  <script src="js/config.js"></script>
  <!-- Import script containing WebRTC related functions -->
  <script src="js/main.js"></script>
</body>

</html>